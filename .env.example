# =============================================================================
# Huron Grants RuVector Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# PostgreSQL Database (RuVector with pgvector)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=huron_grants
POSTGRES_USER=huron_admin
POSTGRES_PASSWORD=your_secure_password_here

# Full connection string (alternative to individual settings)
DATABASE_URL=postgresql://huron_admin:your_secure_password_here@localhost:5432/huron_grants

# pgvector settings
PGVECTOR_DIMENSIONS=1536

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# =============================================================================
# AI Provider API Keys
# =============================================================================

# OpenAI (for embeddings and GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (optional, for Gemini models)
GOOGLE_API_KEY=your-google-ai-key-here

# =============================================================================
# RuVector / Embedding Configuration
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# RuVector embeddings service port
EMBEDDINGS_PORT=8080

# =============================================================================
# WASM Configuration (Client-Side)
# =============================================================================

# Enable client-side vector search
VITE_ENABLE_WASM=true

# IndexedDB database name for offline storage
VITE_OFFLINE_DB_NAME=huron-grants-offline

# Sync interval in milliseconds (default: 30 seconds)
VITE_SYNC_INTERVAL=30000

# Maximum offline queue size before forcing sync
VITE_MAX_QUEUE_SIZE=100

# =============================================================================
# Self-Learning Configuration
# =============================================================================

# Enable self-learning from user interactions
SELF_LEARNING_ENABLED=true

# Minimum confidence threshold for auto-learning (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.85

# Number of samples before pattern consolidation
CONSOLIDATION_THRESHOLD=50

# Enable trajectory tracking for explainability
TRAJECTORY_TRACKING=true

# =============================================================================
# Multi-Tenant Configuration
# =============================================================================

# Enable Row Level Security
ENABLE_RLS=true

# Default tenant for development
DEFAULT_TENANT_ID=dev-tenant-001

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development | staging | production
NODE_ENV=development

# Application port
PORT=3000

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable debug mode (verbose logging)
DEBUG=false

# =============================================================================
# Claude Flow MCP Integration
# =============================================================================

# MCP server configuration
CLAUDE_FLOW_MCP_PORT=3001
CLAUDE_FLOW_MCP_HOST=localhost
CLAUDE_FLOW_MCP_TRANSPORT=stdio

# Memory backend: hybrid | sqlite | postgres
CLAUDE_FLOW_MEMORY_BACKEND=hybrid
CLAUDE_FLOW_MEMORY_PATH=./data/memory

# =============================================================================
# Security Settings
# =============================================================================

# JWT secret for authentication
JWT_SECRET=your-jwt-secret-min-32-chars-here

# Session secret
SESSION_SECRET=your-session-secret-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
