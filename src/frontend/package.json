{
  "name": "huron-bangalore-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "TURBOPACK=1 next dev --turbo",
    "dev:webpack": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:profile": "NEXT_PROFILE=true next build",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "lint": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules/.cache",
    "prebuild": "npm run type-check && npm run lint",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "PWDEBUG=1 playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report test-results/html-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:verbose": "VERBOSE_LOGS=true playwright test",
    "test:e2e:network": "CAPTURE_NETWORK=true VERBOSE_LOGS=true playwright test",
    "test:e2e:ci": "CI=true playwright test --project=chromium --reporter=github,json",
    "test:e2e:install": "playwright install chromium",
    "test:e2e:install-all": "playwright install"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@tanstack/react-query": "^5.45.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.395.0",
    "next": "14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.35",
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "critters": "^0.0.23",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "playwright": "^1.58.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  }
}
